@page "/login"

@using Microsoft.AspNetCore.Components.Web

<PageTitle>Login</PageTitle>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Full page center alignment with gradient background */
    .page-container {
        height: 90vh; /* Full viewport height */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Login box */
    .login-container {
        max-width: 850px;
        width: 100%;
        background: white;
        border-radius: 15px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

    /* Carousel Image Styling */
    .carousel-inner {
        height: 100%;
    }

    .carousel-inner img {
        width: 100%; /* Fill the width of the column */
        height: 100%; /* Match the height of the column */
        object-fit: cover; /* Ensure the image covers the container without distortion */
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;
    }

    /* Flexbox Layout for alignment */
    .row.g-0 {
        display: flex;
        align-items: center;
    }

    /* Center form content */
    .login-form {
        padding: 40px;
        text-align: center;
    }

    /* Custom Button */
    .btn-custom {
        background-color: #f48fb1;
        color: white;
        font-size: 18px;
        padding: 10px;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
        border: none;
    }

    .btn-custom:hover {
        background-color: #A64365;
        transform: scale(1.05);
        color: white;
    }

    /* Text fields */
    .form-control {
        border-radius: 8px;
        padding: 10px;
        height: 50px; /* Consistent height with the carousel image */
    }
    /* Links */
    .login-form a {
        color: #A64365;
        text-decoration: none;
    }

    .login-form a:hover {
        text-decoration: underline;
    }
</style>

<div class="page-container">
    <div class="container login-container">
        <div class="row g-0">
            <!-- Carousel Section -->
            <div class="col-md-6 d-none d-md-block">
                <div id="carouselExample" class="carousel slide h-100" data-bs-ride="carousel">
                    <div class="carousel-inner h-100 text-center">
                        <div class="carousel-item active">
                            <img src="img/Bibliothek1.jpg" class="d-block w-100" alt="Slide 1">
                        </div>
                        <div class="carousel-item">
                            <img src="img/Bibliothek2.jpg" class="d-block w-100" alt="Slide 2">
                        </div>
                        <div class="carousel-item">
                            <img src="img/Bibliothek3.jpg" class="d-block w-100" alt="Slide 3">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Login Form Section -->
            <div class="col-md-6 d-flex align-items-center">
                <div class="login-form w-100">
                    <h2 class="mb-4">Willkommen zurück!</h2>
                    <form>
                        <div class="mb-3">
                            <label for="username" class="form-label">Benutzername</label>
                            <input type="text" class="form-control" id="username" placeholder="Gib deinen Benutzernamen ein">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Passwort</label>
                            <input type="password" class="form-control" id="password" placeholder="Gib dein Passwort ein">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom">Einloggen</button>
                        </div>
                        <p class="mt-3">
                            <a href="#">Passwort vergessen?</a> | <a href="/register">Noch kein Konto?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var myCarousel = new bootstrap.Carousel(document.querySelector('#carouselExample'), {
            interval: 3000, // Change slide every 3s
            wrap: true
        });
    });
</script>

@code {
    [CascadingParameter] public bool ShowNavMenu { get; set; }

    protected override void OnInitialized()
    {
        ShowNavMenu = false; // Hide NavMenu for this page
    }
}
